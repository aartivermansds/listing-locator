<section class="title-transparent page-title" style="background:url('<%= asset_path("listing.jpg")%>')">
  <div class="container">
    <div class="title-content">
      <h1>Listings</h1>
      <div class="breadcrumbs">
        <a href="/">Home</a>
        <span class="gt3_breadcrumb_divider"></span>
        <span class="current">All listings</span>
      </div>
    </div>
  </div>
</section>

<!-- Page Title -->
<div class="clearfix"></div>
<!-- Page Title -->
<!-- ================ Vertical Listing Style ======================= -->
<section class="show-case">
   <div class="container">
      <div class="row">
         <% @listings.each do |listing| %>
         <div class="col-md-12 col-sm-12">
            <div class="verticleilist listing-shot">
               <div class="listing-badge now-open">Now Open</div>
               <%= link_to listing_path(listing), class: "listing-item" do %>
               <div class="listing-shot-img">
                  <%= image_tag listing.banner_image_url, class: "img-responsive" if listing.banner_image_url.present? %>
                  <span class="approve-listing"><i class="fa fa-check"></i></span>
               </div>
               <% end %>
               <div class="verticle-listing-caption">
                  <span class="like-listing"><i class="fa fa-heart-o" aria-hidden="true"></i></span>
                  <div class="listing-shot-caption">
                     <h4><%= listing.name %></h4>
                     <p class="listing-description"><%= listing.description.html_safe %></p>
                  </div>
                  <div class="listing-shot-info">
                     <div class="row extra">
                        <div class="col-md-12">
                           <div class="listing-detail-info">
                              <span><i class="fa fa-map-marker" aria-hidden="true"></i><%= listing.address %></span>
                              <span><i class="fa fa-phone" aria-hidden="true"></i><%= listing.contact %></span>
                              <span><i class="fa fa-globe" aria-hidden="true"></i><%= listing.website %></span>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="listing-shot-info rating">
                     <div class="row extra">
                        <div class="col-md-7 col-sm-7 col-xs-6">
                           <i class="color fa fa-star" aria-hidden="true"></i>
                           <i class="color fa fa-star" aria-hidden="true"></i>
                           <i class="color fa fa-star" aria-hidden="true"></i>
                           <i class="color fa fa-star-half-o" aria-hidden="true"></i>
                           <i class="fa fa-star" aria-hidden="true"></i>
                           <span>27 Reviews</span>
                        </div>
                       </div>
                  </div>
               </div>
            </div>
         </div>
         <% end %>
      </div>
   </div>
   <%= paginate @listings %>
   </div>
</section>