<!-- Page Title -->

<section class="title-transparent page-title" style="background:url('<%= asset_path("title-bg.jpg")%>')";>
  <div class="container">
    <div class="title-content">
    </div>
  </div>
</section>
<div class="clearfix"></div>
<!-- Page Title -->

<section class="padd-0">
  <div class="container">
    <!-- General Information -->
    <div class="add-listing-box translateY-60 edit-info mrg-bot-25 padd-bot-30 padd-top-25">
      <div class="listing-box-header">
        <div class="avater-box">
          <% if @user.profile_image.present? %>
          <%= image_tag @user.profile_image_url, class: "img-responsive img-circle" %>
          <% else %>
          <%= image_tag "avatar.jpg", class: "img-responsive img-circle" %>
          <% end %>
        </div>
        <h3><%= @user.name %></h3>
        <p>Account Manager</p>
      </div>
      <div class="row mrg-r-10 mrg-l-10 preview-info">
        <div class="col-sm-6">
          <label><i class="ti-mobile preview-icon call mrg-r-10"></i><%= @user.contact %></label>
        </div>
        <div class="col-sm-6">
          <label><i class="ti-email preview-icon email mrg-r-10"></i><%= @user.email %></label>
        </div>
        <div class="col-sm-6">
          <label><i class="ti-gift preview-icon birth mrg-r-10"></i><%= @user.date_of_birth %></label>
        </div>
        <div class="col-sm-6">
          <label><i class="ti-world preview-icon web mrg-r-10"></i><%= @user.website %></label>
        </div>
      </div>
    </div>
    <!-- End General Information -->
  </div>
</section>

<section class="padd-top-0">
  <div class="container">
    <div class="col-md-6 col-sm-12 mob-padd-0">
      <!-- Basic Information -->
      <div class="add-listing-box edit-info mrg-bot-25 padd-bot-30 padd-top-5">
        <div class="preview-info-header">
          <h4>Basic Info</h4>
        </div>
        <div class="preview-info-body">
          <ul class="info-list">
            <li>
              <label>Name:</label>
              <span><%= @user.name %></span>
            </li>
            <li>
              <label>Company:</label>
              <span><%= @user.company_name %></span>
            </li>
            <li>
              <label>Designation:</label>
              <span><%= @user.designation %></span>
            </li>
            <li>
              <label>Birth:</label>
              <span><%= @user.date_of_birth %></span>
            </li>
            <li>
              <label>Age:</label>
              <span><%= @user.age %></span>
            </li>
          </ul>
        </div>
      </div>
      <!-- End Basic Information -->
    </div>

    <div class="col-md-6 col-sm-12 mob-padd-0">
      <!-- Address Information -->
      <div class="add-listing-box edit-info mrg-bot-25 padd-bot-30 padd-top-5">
        <div class="preview-info-header">
          <h4>Basic Info</h4>
        </div>
        <div class="preview-info-body">
          <ul class="info-list">
            <li>
              <label>Phone:</label>
              <span><%= @user.contact %></span>
            </li>
            <li>
              <label>Email:</label>
              <span><%= @user.name %></span>
            </li>
            <li>
              <label>State:</label>
              <span><%= @user.state %></span>
            </li>
            <li>
              <label>Country:</label>
              <span><%= @user.country %></span>
            </li>
            <li>
              <label>Address:</label>
              <span><%= @user.address %></span>
            </li>
          </ul>
        </div>
      </div>
      <!-- End Address Information -->
    </div>

    <div class="col-md-6 col-sm-12 mob-padd-0">
      <!-- About Information -->
      <div class="add-listing-box edit-info mrg-bot-25 padd-bot-30 padd-top-5">
        <div class="preview-info-header">
          <h4>About</h4>
        </div>
        <div class="preview-info-body">
          <p><%= @user.about%></p>
        </div>
      </div>
      <!-- End About Information -->
    </div>

    <div class="col-md-6 col-sm-12 mob-padd-0">
      <!-- Follow Information -->
      <div class="add-listing-box edit-info mrg-bot-25 padd-bot-30 padd-top-5">
        <div class="preview-info-header">
          <h4>Follow Us</h4>
        </div>
        <div class="preview-info-body">
          <ul class="social-info info-list">
            <li>
              <label><i class="fa fa-facebook"></i></label>
              <span><%= @user.facebook_url %></span>
            </li>
            <li>
              <label><i class="fa fa-twitter"></i></label>
              <span><%= @user.twitter_url %></span>
            </li>
            <li>
              <label><i class="fa fa-google-plus"></i></label>
              <span><%= @user.googleplus_url %></span>
            </li>
            <li>
              <label><i class="fa fa-linkedin"></i></label>
              <span><%= @user.linkedin_url %></span>
            </li>
            <li>
              <label><i class="fa fa-youtube"></i></label>
              <span><%= @user.youtube_url %></span>
            </li>
          </ul>
        </div>
      </div>
      <!-- End Follow Information -->
    </div>
  </div>
</section>
