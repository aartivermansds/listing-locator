<p id="notice"><%= notice %></p>

<h1>Place Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Banner image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @place_categories.each do |place_category| %>
      <tr>
        <td><%= place_category.name %></td>
        <td><%= place_category.description %></td>
        <td><%= place_category.banner_image %></td>
        <td><%= link_to 'Show', admins_place_category_path(place_category) %></td>
        <td><%= link_to 'Edit', edit_admins_place_category_path(place_category) %></td>
        <td><%= link_to 'Destroy', admins_place_category_path(place_category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

